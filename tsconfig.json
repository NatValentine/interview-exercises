{
  "compilerOptions": {
    "outDir": "./",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom", "es2020"],
    "skipLibCheck": true
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
